@page "/"

<PageTitle>Home</PageTitle>

<div class="container">
	@foreach (MenuItem menuItem in _menuItems)
	{
		<div class="row">
			<div class="col-9">
				@menuItem.Description
			</div>
			<div class="col-3">
				@menuItem.Price
			</div>
		</div>
	}
	<div class="row justify-content-center">
		<div class="col-6">
			<strong>Dodaj guacamole za @_guacamolePrice</strong>
		</div>
	</div>
</div>