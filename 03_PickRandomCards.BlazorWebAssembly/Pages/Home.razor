@page "/"

<PageTitle>Home</PageTitle>

<div class="container">
	<div class="row">
		<div class="col-8">
			<div class="row">
				<h3>Ile kart wybrać?</h3>
			</div>

			<div class="row mt-5">
				<input type="range" class="col-10 form-control-range" min="1" max="15" @bind="_numberOfCards" />
				<div class="col-2">@_numberOfCards</div>
			</div>

			<div class="row mt-5 col-2">
				<button type="button" class="btn btn-primary" @onclick="UpdateCards">
					Wybierz karty
				</button>
			</div>
		</div>

		<div class="col-4">
			<ul class="list-group">
				@foreach (var card in _pickedCards)
				{
					<li class="list-group-item">@card</li>
				}
			</ul>
		</div>
	</div>
</div>